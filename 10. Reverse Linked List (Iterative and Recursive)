#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

void reverseIterative(struct Node** head) {
    struct Node* prev = NULL;
    struct Node* current = *head;
    struct Node* next = NULL;
    while (current != NULL) {
        next = current->next;
        current->next = prev;
        prev = current;
        current = next;
    }
    *head = prev;
}

struct Node* reverseRecursiveUtil(struct Node* node) {
    if (node == NULL || node->next == NULL)
        return node;
    struct Node* rest = reverseRecursiveUtil(node->next);
    node->next->next = node;
    node->next = NULL;
    return rest;
}

void reverseRecursive(struct Node** head) {
    *head = reverseRecursiveUtil(*head);
}

void insertAtEnd(struct Node** head, int data) {
    struct Node* newNode = malloc(sizeof(struct Node));
    newNode->data = data;
    newNode->next = NULL;
    if (*head == NULL) {
        *head = newNode;
        return;
    }
    struct Node* temp = *head;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = newNode;
}

void display(struct Node* head) {
    struct Node* temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {
    struct Node* head = NULL;
    insertAtEnd(&head, 10);
    insertAtEnd(&head, 20);
    insertAtEnd(&head, 30);
    insertAtEnd(&head, 40);

    display(head);

    reverseIterative(&head);
    display(head);

    reverseRecursive(&head);
    display(head);

    while (head != NULL) {
        struct Node* tmp = head;
        head = head->next;
        free(tmp);
    }
    return 0;
}
