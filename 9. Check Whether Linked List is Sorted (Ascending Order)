#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

int isSorted(struct Node* head) {
    if (head == NULL || head->next == NULL)
        return 1;
    struct Node* temp = head;
    while (temp->next != NULL) {
        if (temp->data > temp->next->data)
            return 0;
        temp = temp->next;
    }
    return 1;
}

void insertAtEnd(struct Node** head, int data) {
    struct Node* newNode = malloc(sizeof(struct Node));
    newNode->data = data;
    newNode->next = NULL;
    if (*head == NULL) {
        *head = newNode;
        return;
    }
    struct Node* temp = *head;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = newNode;
}

void display(struct Node* head) {
    struct Node* temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {
    struct Node* head = NULL;
    insertAtEnd(&head, 10);
    insertAtEnd(&head, 20);
    insertAtEnd(&head, 30);

    display(head);
    printf("Is sorted: %d\n", isSorted(head));

    insertAtEnd(&head, 25);
    display(head);
    printf("Is sorted: %d\n", isSorted(head));

    while (head != NULL) {
        struct Node* tmp = head;
        head = head->next;
        free(tmp);
    }
    return 0;
}
